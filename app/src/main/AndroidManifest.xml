<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.immr.studentplanner">

    <application
        android:name=".Channel"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_bzb_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_bzb_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:exported="true" />
        <activity
            android:name=".RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".TermsActivity" />
        <activity android:name=".EditTermsActivity" />
        <activity android:name=".TermsDetailedActivity" />
        <activity android:name=".CoursesActivity" />
        <activity android:name=".EditCourseActivity" />
        <activity android:name=".AssessmentsActivity" />
        <activity android:name=".EditAssessmentActivity" />
        <activity android:name=".CourseDetailedActivity" />
        <activity android:name=".AssessmentDetailedActivity" />
        <activity android:name=".NotesActivity" />
        <activity android:name=".ProfessorActivity" />

        <receiver
            android:name=".receivers.AlarmReceiver"
            android:enabled="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>